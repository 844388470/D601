/* pages/map/map.wxss */

map{
  width: 100%;
  height: 100vh;
}

.tip{
  box-sizing: border-box;
  
  padding:21rpx;
  position: absolute;
  bottom:23rpx;
  left: 27rpx;
  right: 27rpx;
  background-color: #fff;
  border-radius:10rpx;
  box-shadow:0rpx 0rpx 15rpx #999;
  z-index:999;
}

.tip .tip_head{
  /* font-weight: 500; */
  border-bottom: 1rpx solid #e5e5e5;
  font-size: 32rpx;
  color: #000;
  padding:0 0 10rpx;
  /* display: flex; */
  align-items: center;
  position: relative;
  /* justify-content: space-between; */
}

.tip_head .tip_head_date{
  width: 300rpx;
}

.tip_head .tip_head_time{
  margin-left: 80rpx;
  margin-right: 80rpx;
  /* width: 500rpx; */
  text-align: center;
  line-height: 80rpx;
}

.tip_head_image_left{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: 0;
  left: 0;
}

.tip_head_image_right{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: 0;
  right: 0;
}

.tip .tip_address{
  padding:0;
  font-size: 31rpx;
  position: relative;
}

.tip .tip_address_top{
  margin-top: 16rpx;
  position: relative;
}

.tip .tip_address_text{
  /* padding-left: 40rpx; */
  line-height: 50rpx;
}

.tip .tip_address_line{
  position: absolute;
  top: 36rpx;
  left: 14rpx;
  width: 0;
  border-right: 5rpx dotted #02ad00;
  height: 40rpx;
}

.tip .circle {
  position: absolute;
  top: 6rpx;
  left: 1rpx;
  display: inline-block;
  width: 14px;
  height: 14px;
  border-radius: 50%;
  background-color: #ff7800;
}

.circle.green{
  background-color: #02ad00;
}

.tip .tip_juli{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
  font-size: 31rpx;
}

.tip_juli .tip_juli_image{
  width: 45rpx;
  height: 30rpx;
  margin-right: 15rpx;
}

.tip_juli .tip_juli_image.people{
  width: 30rpx;
  height: 45rpx;
}

.tip_juli .tip_juli_image.fire{
  width: 40rpx;
  height: 40rpx;
}




