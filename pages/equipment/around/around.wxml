<!--pages/equipment/around/around.wxml-->
<view class='content'>
  <view class="p"></view>
  <!-- <view class="p">最多可设置4个电子围栏，当设备进入或离开电子围栏范围，App端将收到推送消息。</view> -->
  <view class="title">
    <text>电子围栏({{list.length}})</text>
    <!-- <text bindtap='editMode' class="title_edit">{{edit?'切换':'编辑'}}</text> -->
  </view>
  <view class='add' wx:if="{{!edit}}" bindtap='goAddAround'>
      <image src='../../../image/around/add.png' class="add_iamge"></image>
      <text class='add_text'>添加</text>
  </view>
  <view class='list' wx:for="{{list}}" wx:key="fenceId" bindtap='editAround' data-index='{{index}}'>
    <view class='list_left' data-index='{{index}}'>
      <view class="list_left_title" data-index='{{index}}'>{{item.fenceName}}</view>
      <view class="list_left_address" data-index='{{index}}'>
        <image class="list_left_address_img" src='../../../image/message_index.png' data-index='{{index}}'></image>
        <text class='list_left_address_main' data-index='{{index}}'>{{item.fenceRemark}}</text>
      </view>
    </view>
    <view class="list_right" data-index='{{index}}'>
      <image src='../../../image/delete.png' class='list_right_delete' catchtap='deleteMode' data-index='{{index}}'></image>
    </view>
  </view>
</view>
