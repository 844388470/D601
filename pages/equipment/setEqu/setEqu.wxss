/* pages/equipment/setEqu/setEqu.wxss */
.content{
  box-sizing:border-box;
  background-color: #f1f1f1;
}

.userInfo{
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 27rpx;
  border-bottom: 1rpx solid #e4e4e4;
  margin-bottom:20rpx;
}

.userInfo.list{
  border-top: 1rpx solid #e4e4e4;
  border-bottom: 0;
  margin-bottom:0;
}

.userInfo .userInfo_left{
  font-size: 32rpx;
  color: #000;
  font-weight: 500;
  line-height: 48rpx;
   display: table-cell; 
}

.userInfo .userInfo_left_tu{
  width: 40rpx;
  height: 40rpx;
   vertical-align: middle; 
  margin-right:20rpx;
}

.userInfo .userInfo_left_text{
  vertical-align: middle;
  font-size: 31rpx;
}

.userInfo .userInfo_right{
  display: table-cell;
}

.userInfo .userInfo_right input,.userInfo .userInfo_right .userInfo_right_name{
  width:450rpx;
  display:inline-block;
  vertical-align:middle;
  font-size:31rpx;
  color:#a1a1a1;
  text-align:right;
}

.userInfo .userInfo_right_head{
  width: 123rpx;
  height: 123rpx;
  border: 4rpx solid #5dcb5c;
  border-radius: 50%;
  vertical-align: middle;
  display:inline-block;
  overflow:hidden;
}

.userInfo .userInfo_right_title{
  font-size: 31rpx;
  color: #a1a1a1;
}

.userInfo .userInfo_right_direction{
  width: 20rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left:20rpx;
}



.userInfo_left_tu.head{
  width: 40rpx;
  height:40rpx;
  margin-right:20rpx;
}
.userInfo_left_tu.idcard{
  width: 40rpx;
  height:33rpx;
  margin-right:20rpx;
}
.userInfo_left_tu.phone{
  width: 30rpx;
  height:40rpx;
  margin-left:5rpx;
  margin-right:25rpx;
}
.userInfo_left_tu.height{
  width: 30rpx;
  height:40rpx;
  margin-left:5rpx;
  margin-right:25rpx;
}
.userInfo_left_tu.balance{
  width: 32rpx;
  height:40rpx;
  margin-left:4rpx;
  margin-right:24rpx;
}
.userInfo_left_tu.motion{
  width: 40rpx;
  height:30rpx;
  margin-right:20rpx;
}

.btn{
  position: relative;
  width: 90%;
  background-color: red;
  margin-top: 20rpx;
  margin-left: 5%;
  color: #fff;
} 

.userInfo_right{
  width: 540rpx;
  text-align: right;
}

.equData .userInfo_right{
  width: 500rpx;
}

.equData .userInfo_right input{
  text-align: left;
}
.userInfo.list{
  border-top: 0;
  border-bottom: 1rpx solid #e4e4e4;
}

.userInfo .userInfo_right_title.change{
  width: 500rpx;display: inline-block;
  vertical-align: middle;
}

