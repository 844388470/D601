}

.tab .tab-button{
  display: inline-block;
  width: 50%;
  background-color: #f1f1f1;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  
}

.tab .tab-button.active{
  color:#fff;
  background-color: #02ad00;
