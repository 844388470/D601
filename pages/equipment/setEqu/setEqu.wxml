<!--pages/equipment/setEqu/setEqu.wxml-->
<view class="content">
  <view class='tab'>
    <view class="{{active=='1'?'active tab-button':'tab-button'}}" bindtap='actChong'>宠物信息</view>
    <view class="{{active=='2'?'active tab-button':'tab-button'}}" bindtap='actEqu'>设备参数</view>
  </view>
  <view wx:if="{{active=='1'}}" class="equData">
    <view class="userInfo list" wx:for="{{equData}}"  wx:key="fieldName">
      <view class="userInfo_left">
        <text class="userInfo_left_text">{{item.fieldName}}</text>
      </view>
      <view class="userInfo_right">
        <input class="userInfo_right_title change tr" type='text' value='{{item.content}}' disabled='{{!isEditMode}}' bindinput='getInput' data-index="{{index}}"></input>
      </view>
    </view>
    <view class="btn" bindtap='enterEdit' wx:if="{{!isEditMode}}" style="background:#409EFF">编辑模式</view>
    <view class="btn" bindtap='confirmEdit' wx:if="{{isEditMode}}" style="background:#409EFF">确认编辑</view>
    <view class="btn" bindtap='cancelEdit' wx:if="{{isEditMode}}" >取消编辑</view>
  </view>

  <view wx:if="{{active=='2'}}">
    <view class="userInfo list">
      <view class="userInfo_left">
        <text class="userInfo_left_text">设备类型</text>
      </view>
      <view class="userInfo_right">
        <input class="userInfo_right_title" type='text' value='{{models}}'  disabled='true'></input>
      </view>
    </view>   
    <view class="userInfo list">
      <view class="userInfo_left">
        <text class="userInfo_left_text">设备iccid</text>
      </view>
      <view class="userInfo_right">
        <input class="userInfo_right_title" type='text' value='{{sn}}'  disabled='true'></input>
      </view>
    </view> 
    <view class="userInfo list">
      <view class="userInfo_left">
        <text class="userInfo_left_text">设备IMEI</text>
      </view>
      <view class="userInfo_right">
        <input class="userInfo_right_title" type='text' value='{{imei}}'  disabled='true'></input>
      </view>
    </view> 
    <view class="userInfo list" bindtap='goQrCode'>
      <view class="userInfo_left">
        <text class="userInfo_left_text">绑定二维码</text>
      </view>
      <view class="userInfo_right">
        <image class='userInfo_right_direction' src="../../../image/right.png"></image>
      </view>
    </view> 
    <view class="userInfo list" bindtap='goAround'>
      <view class="userInfo_left">
        <text class="userInfo_left_text">电子围栏</text>
      </view>
      <view class="userInfo_right">
        <image class='userInfo_right_direction' src="../../../image/right.png"></image>
      </view>
    </view>
    <view class="userInfo list" bindtap='getVol'>
      <view class="userInfo_left">
        <text class="userInfo_left_text">查询电量</text>
      </view>
      <view class="userInfo_right">
        <image class='userInfo_right_direction' src="../../../image/right.png"></image>
      </view>
    </view>
    <view class="btn" bindtap='relieve'>解除绑定</view>
  </view>
</view>
