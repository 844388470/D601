
.login-info {
  width: 100%;
  height: 25vh;
  position: relative;
  background-color: rgba(255,255,255,0.2)
}

.login-input-contain{
  padding: 50rpx 50rpx 0rpx 50rpx;
  background-color: rgba(255,255,255,0.2)
}

.input-row {
  position: relative;
  z-index: 99;
  height: 115rpx;
  border-bottom: 1rpx solid #E9E9E9;
}

.input-row + .input-row {
  margin-top: 40rpx;
}

.input-row label {
  position:absolute;
  z-index:9;
  top:37rpx;
  font-size:30rpx;
  color:#9CA9B6;
  transition:all  0.5s;
}

.active label{
  top:-16rpx;
  font-size: 26rpx
}

.input-row input {
  position: relative;
  z-index: 99;
  font-size: 34rpx;
  color: #1B1F3D;
  width:100%;
  height: 116rpx;
  line-height: 116rpx;
}

.btn{
  width: 650rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
}

.login-color{
  background: #02ad00;
  color: #FFFFFF;
}
.regist {
  text-align: center;
  font-size: 30rpx;
  color: #9CA9B6;
  margin: 30rpx 0;
}

.active-line{
    border-bottom:2rpx solid #2F2F3D!important;
}

.image{
  width: 100%;
  height:100%
}

.image{
  display: inline-block;
  overflow: hidden;
  position: absolute;
  left: 250rpx;
  top: 250rpx;
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
}

.shouquan{
  position: absolute;
  left: 50rpx;
  right: 50rpx;
  top: 700rpx;
  margin: 0;
  width: auto;
  background-color: #02ad00;
  color: #fff;
}

.changePhone{
  position: absolute;
  left: 50rpx;
  right: 50rpx;
  text-align: center;
  font-size:30rpx;
  color:#02ad00;
  top: 820rpx;
  margin: 0;
}