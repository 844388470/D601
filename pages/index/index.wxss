map {
  width: 100%;
  height: 100vh;
}

.tip{
  box-sizing: border-box;
  height:175rpx;
  padding:21rpx;
  position: absolute;
  bottom:23rpx;
  left: 27rpx;
  right: 27rpx;
  background-color: #fff;
  border-radius:10rpx;
  box-shadow:0rpx 0rpx 15rpx #999;
  z-index:999;
}

.image_location{
  float: left;
  width:84rpx;
  height: 84rpx;
  border-radius: 50%;
}

.image_location cover-image{
  width: 100%;height: 100%;
}

.title_time{
  float: left;
  margin-left:25rpx;
  width:540rpx;
}

.title_time .title{
  font-size: 28rpx;
  color:#000;
  font-weight: bold;
  line-height: 50rpx;
}

.title_time .time{
  font-size: 24rpx;
  color:#4d4d4d;
  line-height: 34rpx;
}

.bottom{
  margin-top: 1rpx;
  display: flex!important;
  align-items: center;
  justify-content: space-between;
}

.bottom .address{
  font-size: 24rpx;
  color: #616161;
  line-height: 54rpx;
  width: 500rpx;
  text-overflow:ellipsis;overflow:hidden;white-space:nowrap;
}

.bottom .timeFn{
  font-size: 24rpx;
  color: #616161;
  width: 200rpx;
  line-height: 54rpx;
  text-align: right;
}

.selector.project{
  box-sizing: border-box;
  padding:0 20rpx;
  position: absolute;
  top:27rpx;
  left:230rpx;
  right: 230rpx;
  height:60rpx;
  background-color:#02ad00;
  border-radius:30rpx;
  color:#fff;
}

.selector.project .iconfont{
  width:28rpx;
  height:16rpx;
}
.selector.project .pellipsis{
  width: 160rpx;
  text-align: center;
}

.refresh{
  position: absolute;
  bottom:220rpx;
  right: 27rpx;
  background-color: #fff;
  border-radius:50%;
  width: 90rpx;
  height: 90rpx;
  text-align: center;
  overflow:visible;
}

.refresh .refresh_image{
  width: 55rpx;
  height: 55rpx;
  margin-top: 8rpx;
  display: inline-block;
}

.refresh .refresh_text{
  font-size: 17rpx;
}

.trackMode{
  bottom:320rpx;
  font-size: 28rpx;
  /* line-height: 80rpx; */
}

.trackMode_SOS{
  font-size: 28rpx;
  line-height: 80rpx;
}
.countdown{
  right:110rpx;
  border-radius: 0;
  width: 100rpx;
  background-color: rgba(0,0,0,0)
}
.mode{
  width: 0;
  height: 0;
}